---
import type { CollectionEntry } from "astro:content";
import { getPostUrlBySlug } from "@utils/url-utils";
import { walineConfig } from "../config";
import PostCard from "./PostCard.astro";

const { page } = Astro.props;

let delay = 0;
const interval = 50;
---
<div class="transition flex flex-col rounded-[var(--radius-large)] bg-[var(--card-bg)] py-1 md:py-0 md:bg-transparent md:gap-4 mb-4">
    {page.data.map((entry: CollectionEntry<"posts">) => (
        <PostCard
                entry={entry}
                title={entry.data.title}
                tags={entry.data.tags}
                category={entry.data.category}
                published={entry.data.published}
                updated={entry.data.updated}
                url={getPostUrlBySlug(entry.slug)}
                image={entry.data.image}
                description={entry.data.description}
                draft={entry.data.draft}
                class:list="onload-animation"
                style={`animation-delay: calc(var(--content-delay) + ${delay++ * interval}ms);`}
        ></PostCard>
    ))}
</div>

{walineConfig.enable && walineConfig.pageview && (
<script is:inline define:vars={{ serverURL: walineConfig.serverURL }}>
  const initPageviewCounts = async () => {
    try {
      const { pageviewCount } = await import('https://unpkg.com/@waline/client@v3/dist/pageview.js');
      pageviewCount({
        serverURL: serverURL,
        update: false, // Don't increment count on list page views
      });
    } catch (err) {
      console.error('Failed to load pageview counts:', err);
    }
  };

  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initPageviewCounts);
  } else {
    initPageviewCounts();
  }

  // Re-initialize on Swup page change
  document.addEventListener("swup:contentReplaced", () => {
    initPageviewCounts();
  });
</script>
)}